<script>
    function mudarCor() {
        const horaAtual = new Date().getHours(); // Pega a hora atual
        let corFundo;
        let mensagem;
        
        // Criando objeto Date
        const agora = new Date();
        const opcoes = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
        
        // Formata√ß√£o da data
        const dataFormatada = agora.toLocaleDateString("pt-BR", opcoes);
        
        // Definindo o hor√°rio e cor
        if (horaAtual >= 6 && horaAtual < 12) {
            corFundo = '#FFE98A';
            mensagem = "Bom dia! ‚òÄÔ∏è";
        } else if (horaAtual >= 12 && horaAtual < 18) {
            corFundo = '#FFB35E';
            mensagem = "Boa tarde! ‚õÖ";
        } else if (horaAtual >= 18 && horaAtual < 21) {
            corFundo = '#7DBEF5';
            mensagem = "Boa noite! üí§";
        } else {
            corFundo = '#2C3E50';
            mensagem = "Est√° na hora de descansar! üò¥"; // Mensagem mais amig√°vel
        }
        
        // Atualizando o fundo da p√°gina e o t√≠tulo
        document.body.style.backgroundColor = corFundo;
        document.getElementById("Titulo").innerText = mensagem;
        
        // Exibindo hora e data
        document.getElementById("hora").innerText = "Hora atual: " + agora.toLocaleTimeString('pt-BR');
        document.getElementById("data").innerText = "Data: " + dataFormatada;
    }
</script>
